@using ARSM___Avtobusi_R.S.Makedonija.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}
<style>
    h2, h4 {
        color: #37c77f;
    }
</style>
<h2 style="text-align: center;">Најава</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h4>Користете веќепостоечко корисничко име</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("Корисничко име / email", new { @class = "col-md-12 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group" style=" margin-top: 12px; ">
                    @Html.Label("Лозинка", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.Label("Запамети ме")
                        </div>
                    </div>
                </div>
                <div class="form-group" style=" margin-top: 12px; ">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Најава" class="btn btn-outline-dark" />
                    </div>
                </div>
                <p style=" margin-top: 12px; text-decoration: underline; ">
                    @Html.ActionLink("Регистрирајте се како нов корисник", "Register")
                </p>
                
                    <p>
                        @Html.ActionLink("Ја заборавивте Вашата лозинка?", "ForgotPassword")
                    </p>
            }
        </section>
    </div>
